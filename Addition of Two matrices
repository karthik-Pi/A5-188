#include<stdio.h>
int main() 
{
    int x, y, m, n,j;
   
    // Order of a Matrix
    printf("Enter the Rows of the matrix \n");
    scanf("%d",&m);       // m is number of rows 
    printf("Enter the Columns of the matrix \n");
    scanf("%d",&n);      // n is number of columns
    int mtx1[m][n];     // mtx1 is the first matrix
    int mtx2[m][n];    // mtx2 is the Second matrix
    // Reading values of the matrix 
    printf("\nEnter the elements of the First matrix \n");
    for (x=0; x<m; x++)
    { 
        for (y=0; y<n; y++)
        {
            printf("Enter elements of the First matrix [%d,%d] : ",x+1,y+1);
            scanf("%d", &mtx1[x][y]);
        }
    }
            printf("\n\nEnter the elements of the Second matrix \n");
            for (x=0; x<m; x++)
            {
                for (y=0; y<n; y++)
                {
                    printf("Enter elements of the Second matrix [%d,%d] : ",x+1,y+1);
                   
                    scanf("%d", &mtx2[x][y]);
                }
            }
    printf(" \n");
 
   // Printing the matrix
    printf("\n\nThe First matrix is \n");
    for (x=0; x<m; x++)
    {
        for (y=0; y<n; y++)
        {
            printf("%d ", mtx1[x][y]);
           
        }
        printf("\n");
    }printf("\n");
            printf("\nThe Second matrix is \n");
            for (x=0; x<m; x++)
            {
                for (y=0; y<n; y++)
                {
                    printf("%d ", mtx2[x][y]);
                   
                }
                printf("\n");
            }
        
       //Product of two matrices 
            int sum[m][n];
            for (x=0; x<m; x++) // m - row , n- columns
            {
                 for (y=0; y<n; y++) 
                 {
              // when given two rows and two coloumns    
                      for (j=0; j<m; j++)
                      {    // x11 + y11   -   x12 + y12
                          // x11 + y11   -   x12 + y12
                          // x11 + y11   -   x12 + y12
                          // x11 + y11   -   x12 + y12
                        sum[x][y]=mtx1[x][y]+mtx2[x][y];
                      }
                 }
            }
   // printing the result of matrix         
            printf("\nProduct of two matrix is : \n");
            for (x=0; x<m; x++)    // m is number of rows 
            {                      // n is number of rows 
                for (y=0; y<n; y++)
                {
                    printf("%d ", sum[x][y]);
                }
                printf("\n");
            }
    
    return 0;
}
